alias -g G="| grep"
alias -g T="| tail"
alias -g H="| head"
alias -g S="| sort"
alias -g L="| less"
alias -g M="| most"
alias -g LL="2>&1 | less"
alias -g NE="2> /dev/null"
alias -g NUL="> /dev/null 2>&1"

