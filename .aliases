# commit to dot repo
alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# pullrequest with vim
vpr() {
  if [ $# -eq 0 ]; then
    nvim -c ":Git difftool -y master"
  else
    nvim -c ":Git difftool -y $1"
  fi
}

# Git status vi
alias vig='nvim +Gstatus -c ":only"' 

